{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:mdx/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "18.0"
    }
  },
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "react-refresh/only-export-components": "off",
    "react/prop-types": "off"
  }
}
